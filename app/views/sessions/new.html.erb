<div class="row">
	<div class="col-12">
		<%= form_with model: @user, url: auth_path do |f| %>
			<div class="form-group">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>

			<div class="form-group">
				<%= f.submit "Login", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>