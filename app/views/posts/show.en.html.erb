<main class="container" style="max-width: 700px;">
  <div class="row fullpost">
    <div style="color:#0077B6;padding: 0;"><%= format_date(@post) %></div>
    <br>
    <h3><%= @post.subject_en %></h3>
      <% if @post.picture.attached? %>
        <div class="text-center">
          <%= image_tag(@post.picture, class:"img-responsive") %>
        </div>
      <% end %>
      <%= @post.description_en %>
      <div class="gap-2 d-md-block" style="padding-left: 0; margin: 10px 0;">
        <% @post.categories.each do |category| %>
          <button type="button" class="btn btn-outline-primary btn-sm" onclick='filter(<%= category.id %>);'><%= category.name_en %></button>
        <% end %>
        <%= link_to increment_flag_path(@post.id), remote: true, method: :post, class:"a-l" do %>
